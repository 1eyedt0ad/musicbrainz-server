[% WRAPPER "layout.tt" title=l("Search Results") full_width=1 %]
    <h1>[% l("Search Results") %]</h1>
    <div class="content">
        [%- IF results.size -%]
            [% WRAPPER 'components/with-pager.tt' total=1 %]
                <table class="tbl">
                    <thead>
                        <tr>
                            <th>[% l('Score') %]</th>
                            <th>[% l('Name') %]</th>
                            <th>[% l('Artist') %]</th>
                            <th>[% l('Length') %]</th>
                        </tr>
                    </thead>
                    <tbody>
                        [%- FOR result=results -%]
                        <tr[% ' class="ev"' IF loop.count % 2 == 0 %]>
                            <td>[% result.score %]</td>
                            <td>[% link_recording(result.entity) %]</td>
                            <td>[% artist_credit(result.entity.artist_credit) %]</td>
                            <td>[% result.entity.length | format_length %]</td>
                        </tr>
                        [%- END -%]
                    </tbody>
                </table>
            [% END %]
        [%- ELSE -%]
            <p>[% l('No results found') %]</p>
        [%- END -%]
        [%- INCLUDE "search/form.tt" -%]
    </div>
[% END %]
