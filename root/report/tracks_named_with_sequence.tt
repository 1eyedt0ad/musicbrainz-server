[%- WRAPPER 'layout.tt' title=l('Tracks names which include their track number') full_width=1 -%]

<h1>[% l('Tracks names which include their track number') %]</h1>

<ul>
    <li>[% l('This report aims to identify tracks whose names include their own
              sequence number, e.g. "1) Some Name" (instead of just "Some
              Name").') %]</li>
    <li>[% l('Total tracks: {count}', { count => pager.total_entries }) %]</li>
    <li>[% l('Generated on {date}', { date => UserDate.format(generated) }) %]</li>
</ul>

<form action="[% c.uri_for_action('/artist/merge_queue') %]">
  [% WRAPPER 'components/with-pager.tt' %]
  <table class="tbl">
    <thead>
      <tr>
        <th>[% l('Artist') %]</th>
        <th>[% l('Release') %]</th>
      </tr>
    </thead>
    <tbody>
      [% FOR item IN items %]
      <tr class="[% loop.index % 2 == 0 ? 'ev' : '' %]">
        <td>[% artist_credit(item.track.artist_credit) %]</td>
        <td>
          [% link_entity(item.track.recording, show, html_escape(item.track.name)) %]
        </td>
      </tr>
      [% END %]
    </tbody>
  </table>
[% END %]

[%- END -%]
