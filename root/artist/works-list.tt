<table class="tbl">
    <thead>
        <tr>
            <th>[%- l('Name') -%]</th>
            [%- IF show_artists -%]
                <th>[%- l('Artist') -%]</th>
            [%- END -%]
            <th class="rating c">[% l('Rating') %]</th>
        </tr>
    </thead>
    <tbody>
        [%- FOR work=works -%]
        <tr>
            <td>[% link_work(work) %]</td>
            [%- IF show_artists -%]
                <td>[% artist_credit(work.artist_credit) %]</td>
            [%- END -%]
            <td>[% rating_stars(work) %]</td>
        </tr>
        [%- END -%]
    </tbody>
</table>
