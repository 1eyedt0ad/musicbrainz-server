<table class="details">
  <tr>
    <th>[% l('Client:') %]</th>
    <td>[% edit.data.client_version | html %]</td>
  </tr>

  <tr>
    <th>[% l("PUIDs:") %]</th>
    <td>
      <ul>
        [% FOR puid=edit.display_data.puids %]
        <li>
          <code>[% puid.puid %]</code> - [% link_recording(puid.recording) %]
        </li>
        [% END %]
      </ul>
    </td>
  </tr>
</table>
