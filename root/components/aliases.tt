<h2>[% l("Aliases for {entity_name}", {entity_name => entity.name}) %]</h2>
    [%- IF aliases.size > 0 -%]
        <table class="tbl">
            <thead>
                <tr>
                    <th colspan="[% c.user_exists ? 2 : 1 %]">[% l('Alias') %]</th>
                </tr>
            </thead>
            <tbody>
            [%- FOREACH alias IN aliases -%]
                <tr[% ' class="ev"' IF loop.count % 2 == 0 %]>
                    <td>
                        [% alias.name | html %]
                    </td>
                    [% IF c.user_exists %]
                        <td style="width: 10em">
                            <a href="[% c.uri_for_action(delete_path, [ entity.gid, alias.id ]) %]">
                              [% l('Delete') %]
                            </a> | 
                            <a href="[% c.uri_for_action(edit_path, [ entity.gid, alias.id ]) %]">
                              [% l('Edit') %]
                            </a>
                        </td>
                    [% END %]
                </tr>
            [%- END -%]
            </tbody>
        </table>
    [%- ELSE -%]
        <p>
            [%- l('{entity} has no aliases.', {entity => entity_link(entity)}) -%]
        </p>
    [%- END -%]
    [% IF c.user_exists %]
       <p>
         <a href="[% c.uri_for_action(add_path, [ entity.gid ]) %]">
           [% l('Add a new alias') %]
         </a>
       </p>
    [% ELSE %]
       <p>[% l('Please {log_in|login} to add or edit aliases',
               { log_in => login_url() }) %]</p>
    [% END %]