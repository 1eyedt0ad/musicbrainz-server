[% extra_css = "wikidocs.css" %]
[% WRAPPER "layout.tt" title=l("Link Types") full_width=1 %]
    <div id="content">
        <h1>[% l("Link Types") %]</h1>
        <table border="1">
            <tr>
                <th></th>
                [% FOR type IN types %]
                    <th>[% type %]</th>
                [% END %]
            </tr>

            [% FOR row IN table %]
            <tr>
                <th>[% types.${loop.index} %]</th>
                [% FOR column IN row %]
                    <td>
                    [% IF column %]
                        <a href="[% c.uri_for_action("/admin/linktype/tree", [ column ]) %]">[% column %]</a>
                    [% END %]
                    </td>
                [% END %]
            </tr>
            [% END %]
        </table>
    </div>
[% END %]
