<form action="[% c.req.uri %]" method="post">
    [% USE r = FormRenderer(form) %]
    <fieldset>
        <legend>[% l('List Details') %]</legend>
        [% form_row_text_long(r, 'name', l('Name:')) %]
        [% form_row_checkbox(r, 'public', l('Allow other users to see this list')) %]
    </fieldset>

    [% enter_edit() %]
</form>
