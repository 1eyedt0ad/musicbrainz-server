#!/bin/bash

unset SSH_AUTH_SOCK

MB_SERVER_ROOT=$(cd "$(dirname "${BASH_SOURCE[0]}")/../" && pwd)
cd "$MB_SERVER_ROOT"

source admin/config.sh

LOCAL_DIR=$FTP_DATA_DIR/fullexport

if [ -n "$RSYNC_FULLEXPORT_HOST" ]; then
    RSYNC_FULLEXPORT_PORT=${RSYNC_FULLEXPORT_PORT:-22}

    rsync \
        --archive \
        --delete \
        --exclude='latest-is*' \
        --rsh "ssh -i ~/.ssh/musicbrainz_production_cron.key -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no -p $RSYNC_FULLEXPORT_PORT" \
        --verbose \
        $LOCAL_DIR/ \
        brainz@$RSYNC_FULLEXPORT_HOST:/data/

    rsync \
        --archive \
        --rsh "ssh -i ~/.ssh/musicbrainz_production_cron.key -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no -p $RSYNC_FULLEXPORT_PORT" \
        --verbose \
        $LOCAL_DIR/latest* \
        brainz@$RSYNC_FULLEXPORT_HOST:/data/
fi

# eof rsync-fullexport-files
